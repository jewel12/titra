- form_for :headline, '/headlines/create' do |f|
  %p
    = f.label :title
    = f.text_field :title, :value => @title || ""
  %p
    = f.label :translation
    = f.text_field :translation
  %p
    = f.label :url
    = f.text_field :url, :value => @url || ""
  %p
    = f.submit "Create", :class => 'button'
