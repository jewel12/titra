%html
  %head
    %meta{'http-equiv' => 'content', :content => 'text/html; charset=utf-8'}
    =stylesheet_link_tag 'top'
    %title 鯛虎 | Web Title Translation
  %body
    %div#main
      %div#header
        %p 鯛虎 | Web Title Translation
        -# %h1 海外WEB記事の要約を共有しよう！
      %div#content
        %div#translations
        - @headlines_with_best_translation.each do |headline, translation|
          %div.translation
            %p
              %span.translated_title=translation.title
              %span.translator by #{translation.translator.name}
            %p
              %span=headline.title
              %span= link_to '詳細', url_for(:headlines, :show, :id => headline.id)
