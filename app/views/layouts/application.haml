%html
  %head
    %meta{'http-equiv' => 'content', :content => 'text/html; charset=utf-8'}
    =stylesheet_link_tag 'top'
    %title 鯛虎 | Web Title Translation
  %body
    #main
      #header
        #title
          #left
            %span#title 鯛虎
            %span Web Title Translation
          #right
            - if logged_in?
              %span= link_to 'logout', url(:logout)
            - else
              %span= link_to 'login', url(:login)
      #content= yield
